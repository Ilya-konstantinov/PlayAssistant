<UserControl x:Class="PSModules.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSModules"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" 
             Name="ToggleUserControl">
    <Grid Name="ToggleGrid">
        <Rectangle Name="Rect" HorizontalAlignment="Stretch" Stroke="Black" VerticalAlignment="Stretch" Margin="40, 20, 40, 20" StrokeThickness="4" Fill="Gray"/>
        <Ellipse x:Name="Circle" HorizontalAlignment="Stretch" Stroke="Black" Fill="LightBlue" Margin="0, 0, 0, 0"  Stretch="Uniform" MouseLeftButtonUp="Circle_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
